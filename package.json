{
  "name": "airneis",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "web": "npm run dev -w 'apps/web'",
    "mobile:ios": "npm run ios -w 'apps/mobile'",
    "mobile:android": "npm run android -w 'apps/mobile'",
    "db:migrate": "npm run migrate -w 'packages/db'",
    "db:migrate:make": "npm run migrate:make -w 'packages/db'",
    "db:migrate:down": "npm run migrate:down -w 'packages/db'",
    "db:seed": "npm run seed -w 'packages/db'",
    "db:seed:make": "npm run seed:make -w 'packages/db'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "typecheck": "npm run typecheck -ws --if-present",
    "check": "npm run lint && npm run typecheck && npm run format",
    "clear": "find . -name 'node_modules' -type d -exec rm -rf {} + && find . -name 'package-lock.json' -type d -exec rm {} + && find . -name '.expo' -type d -exec rm -rf {} ",
    "env-symlink": "ln -sf $PWD/.env ./apps/web && ln -sf $PWD/.env ./packages/db"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.3"
  },
  "keywords": [],
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
