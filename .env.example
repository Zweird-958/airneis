# Node environment, either "development" or "production"
NODE_ENV="development"

# Mobile
EXPO_PUBLIC_HOST_SERVER_URL="http://localhost:3000" # Use http://10.0.2.2:3000 for Android emulator
EXPO_USE_METRO_WORKSPACE_ROOT=1 # Needed for the metro bundler to work, don't change it

# Database
DATABASE_HOST="localhost"
DATABASE_USERNAME="username"
DATABASE_PASSWORD="" # Generated with `openssl rand -base64 32`
DATABASE_NAME="airneis"
DATABASE_PORT="5432"

# Meilisearch
MEILISEARCH_MASTER_KEY="" # Generated with `openssl rand -base64 32`
MEILISEARCH_ADMIN_KEY=""
MEILISEARCH_PORT="7700"
NEXT_PUBLIC_MEILISEARCH_URL="http://localhost:7700"
NEXT_PUBLIC_MEILISEARCH_PUBLIC_KEY=""

# Redis
REDIS_PORT="6379"
REDIS_URL="redis://localhost:${REDIS_PORT}"

# Auth
JWT_SECRET="" # Generated with `openssl rand -base64 32`
HASH_SALT_COUNT="10"

# S3
S3_PORT="4566"
S3_PROTOCOL="http"
S3_HOST="localhost"
S3_URL="${S3_PROTOCOL}://${S3_HOST}:${S3_PORT}"
S3_BUCKET="airneis-dev"
S3_ACCESS_KEY_ID="" # Leave empty during development
S3_SECRET_ACCESS_KEY="" # Leave empty during development

# Resend
RESEND_API_KEY="" # Get your API key at https://resend.com/home
RESEND_EMAIL_FROM="" # The email address you want to send emails from

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""

# Optionnal
# VERCEL_URL=""
# PORT=3000
